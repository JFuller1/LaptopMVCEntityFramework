@{
    ViewData["Title"] = "Cheapest Laptops";
}

@model List<Laptop>

<div class="text-center">
    <h1>Cheapest Laptops</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Model</th>
                <th scope="col">Year</th>
                <th scope="col">Brand</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Laptop laptop in Model)
            {
                <tr>
                    <th scope="row">@laptop.Id</th>
                    <td>@laptop.Model</td>
                    <td>@laptop.Year</td>
                    <td>@laptop.Brand.Name</td>
                    <td>@laptop.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>